@page
@model BlogWebsite.Pages.Author.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].Given_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].Last_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].emailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].WebsiteAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].TelephoneNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorModel[0].PostalCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AuthorModel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Given_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebsiteAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelephoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AuthorModelId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AuthorModelId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AuthorModelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
