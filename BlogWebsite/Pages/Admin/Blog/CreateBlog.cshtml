@page
@model BlogWebsite.Pages.Admin.Blog.CreateBlogModel
@{
    ViewData["Title"] = "Blog";
}

<environment>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</environment>

<div>

    <h2> Hello @Model.AuthorName</h2>
</div>

<div>
    <form method="post">

        <p>
            <input type="Text" asp-for="Blog.Title" placeholder="Title" />
            <span asp-validation-for="Blog.Title"></span>
        </p>
        <p>
            <textarea asp-for="Blog.Content" placeholder="Content"></textarea>
            <span asp-validation-for="Blog.Content"></span>
        </p>
        @*<p>
            <select asp-for="Blog.Author" asp-items="Model.AuthorList" placeholder="Select Author"></select>
            <span asp-validation-for="Blog.Author"></span>
        </p>*@
        <p>
            <input type="date" asp-for="Blog.PublishDate" placeholder="Publish Date" />
            <span asp-validation-for="Blog.PublishDate"></span>
        </p>

        <p> <button type="submit"style="background-color:#e5bace;border:groove;margin-right:10px;width:140px;text-align:center;margin:15px"> Publish Blog</button> </p>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}