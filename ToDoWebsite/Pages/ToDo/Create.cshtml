<h1>Create</h1>

<h4>ToDoModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToDoModel.UserEmail" class="control-label"></label>
                <input asp-for="ToDoModel.UserEmail" class="form-control" />
                <span asp-validation-for="ToDoModel.UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoModel.Title" class="control-label"></label>
                <input asp-for="ToDoModel.Title" class="form-control" />
                <span asp-validation-for="ToDoModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoModel.Description" class="control-label"></label>
                <input asp-for="ToDoModel.Description" class="form-control" />
                <span asp-validation-for="ToDoModel.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoModel.AddedDate" class="control-label"></label>
                <input asp-for="ToDoModel.AddedDate" class="form-control" />
                <span asp-validation-for="ToDoModel.AddedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoModel.DueDate" class="control-label"></label>
